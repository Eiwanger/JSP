<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">


    <display-name>Forum</display-name>
    <description>
        Forum Demos.
    </description>
    <!-- Define servlets that are included in the example application -->

    <servlet>
        <!--Here we declare servlet's registered name -->
        <servlet-name>fs</servlet-name>
        <servlet-class>forum.ForumServlet</servlet-class>
        <!--      <servlet-name>HS</servlet-name>
              <servlet-class>webapp.HelloServlet</servlet-class>
      -->
    </servlet>

    <!--Here we say that the LoginServlet can be invoked by writing
    the path and login to the address bar of the browser -->

    <servlet-mapping>
        <servlet-name>fs</servlet-name>
        <url-pattern>/fs</url-pattern>
        <!--  <servlet-name>HS</servlet-name>
         <url-pattern>/helloServlet</url-pattern>
         -->
    </servlet-mapping>

</web-app>
